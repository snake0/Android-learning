<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/spider_round_white_bg" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="70dp" android:layout_weight="1">
        <TextView android:textSize="17dp" android:textColor="@color/spider_black_212121_text_color" android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="15dp" android:text="《隐私政策》更新提示"/>
        <ScrollView android:orientation="vertical" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:textSize="13dp" android:textColor="@color/spider_black_212121_text_color" android:id="@+id/privacy_content_tv" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_weight="1" android:lineSpacingExtra="3dp"/>
        </ScrollView>
    </LinearLayout>
    <View android:background="@color/spider_eeeeee_white_color" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="70dp">
        <TextView android:textSize="18dp" android:gravity="center" android:id="@+id/privacy_disagree_button" android:background="@drawable/spider_round_left_bg" android:layout_width="0dp" android:layout_height="52dp" android:text="不同意" android:layout_weight="1"/>
        <TextView android:textSize="18dp" android:textColor="@color/spider_black_ffffff_text_color" android:gravity="center" android:id="@+id/privacy_agree_button" android:background="@drawable/spider_round_right_bg" android:layout_width="0dp" android:layout_height="52dp" android:text="同意" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
